{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build App",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/App"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean App",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/App"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Rebuild App",
            "type": "shell",
            "command": "make clean && make",
            "options": {
                "cwd": "${workspaceFolder}/App"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
